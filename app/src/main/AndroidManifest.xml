<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bamboy.slidingshut">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_bamboy"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_bamboy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StartInstantlyActivity" />

        <activity android:name=".UpFinishActivity" />

        <activity android:name=".InterceptFinishActivity" />

        <activity android:name=".AssignViewActivity" />

        <activity android:name=".ColorBackdropActivity" />
    </application>

</manifest>